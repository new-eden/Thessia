{% extends "base.twig" %}

{% set title = "" %}

{% block js %}
    <script src="/js/topkills.js"></script>
    <script src="/js/top10Characters.js"></script>
    <script src="/js/top10Corporations.js"></script>
    <script src="/js/top10Alliances.js"></script>
    <script src="/js/top10SolarSystems.js"></script>
    <script src="/js/top10Regions.js"></script>
    <script src="/js/killlist.js"></script>
    <script>
        // Generate the killlist
        generateKillList("/api/killlist/latest/", true, 1);
    </script>
{% endblock %}

{% block css %}
{% endblock %}

{% block container %}
    <div class="container">
        <div class="row">
            <!-- left column -->
            <div class="col-xs-12 col-sm-8 col-md-10">
                <!-- Most Valuable kills -->
                <div id="mostValuableKills" class="hidden-md-down row flex-items-xs-center">
                </div>

                <!-- The Killlist -->
                <div class="table-responsive">
                    <table id="killlist" class="table table-striped table-hover table-sm">
                        <thead class="thead-inverse">
                        <tr>
                            <th class='hidden-sm-down'>Time</th>
                            <th class='hidden-md-down'>Ship</th>
                            <th>Place</th>
                            <th class='hidden-md-down'></th>
                            <th>Victim</th>
                            <th class='hidden-md-down'></th>
                            <th>Final Blow</th>
                        </tr>
                        </thead>
                    </table>
                </div>
            </div>
            <!-- right column -->
            <div class="col-xs-6 col-md-2 hidden-md-down">
                <!-- Top 10 lists -->
                <div id="topCharacters"></div>
                <div id="topCorporations"></div>
                <div id="topAlliances"></div>
                <div id="topSolarSystems"></div>
                <div id="topRegions"></div>
            </div>
        </div>
    </div>
{% endblock %}
<!DOCTYPE html PUBLIC "-//W3C//DTD XHTML 1.0 Transitional//EN" "http://www.w3.org/TR/xhtml1/DTD/xhtml1-transitional.dtd">
<html xmlns="http://www.w3.org/1999/xhtml" xml:lang="en" dir="ltr">
<head>
    <meta http-equiv="content-type" content="text/html; charset=UTF-8"/>
    <meta name="description" content="New Eden, a simple killboard"/>
    <meta name="keywords" content="EVE-Online, EVE, Multiplayer, Killboard, New Eden, killmail"/>
    <!-- Page Meta Tags -->
    {% block meta %}{% endblock %}

    <!-- Page Title -->
    <title>New Eden{% if title %} | {{ title }}{% endif %}</title>

    <!-- Site Font-->
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/4.6.3/css/font-awesome.min.css" />

    <!-- Site CSS -->
    <link rel="stylesheet" type="text/css" href="/css/style.css"/>
    <style type="text/css">
        #ToggleTarget {
            display: none;
        }
    </style>

    <!-- Page CSS -->
    {% block css %}{% endblock %}

    <!-- Site JS -->
    <script type="text/javascript" src="/js/generic.js"></script>
    <script type="text/javascript" src="https://cdnjs.cloudflare.com/ajax/libs/jquery/3.1.0/jquery.min.js"></script>
    <script>
        function toggle(ids) {
            var ele = document.getElementById(ids);
            if (ele.style.display == "block") {
                ele.style.display = "none";
                text.innerHTML = "show";
            } else {
                ele.style.display = "block";
                text.innerHTML = "hide";
            }
        }
    </script>
    <script>
        function Toggle() {
            var el = document.getElementById("ToggleTarget");
            if (el.style.display == "block") {
                el.style.display = "none";
            }
            else {
                el.style.display = "block";
            }
        }
    </script>

    <!-- Page JS -->
    {% block js %}{% endblock %}
</head>

<!-- Start of the body -->
<body style="height: 100%">
    <!-- Popup -->
    <div id="popup"></div>
        <div align="center" id="popup" style="display: none; position: absolute; top: 217px; width: 99%; z-index: 3; padding: 5px;">
    </div>

    <!-- Content? -->
    <div id="repository">
        <br>
        <div id="contentkb" style="margin-top: 50px;">
            <section>
                <!-- Main navbar -->
                {% include "global/navbar.twig" %}

                <!-- Post killmail drop down (@todo remove?)-->
                {% include "global/postKillmail.twig" %}

                <!-- Page Content Section -->
                <section>
                    <!-- Page Header -->
                    <headerkb><h1>{{ pageTitle }}</h1></headerkb>

                    {% if message %}
                    <div id="boardmessage">{{ message }}</div>
                    {% endif %}

                    <!-- Right side Main Content -->
                    <div id="content" {% if fullWidth == true %}style="width: 100%;"{% endif %}>
                        {% block rightContent %}{% endblock %}
                    </div>

                    <!-- Left side Content -->
                    <div id="context">
                        {% block leftContent %}{% endblock %}
                    </div>

                    <div id="footerarea">
                        <br>
                        <div class="counter"></div>
                        <div class="footerbacktotop" style="float: right" alt="Back to Top"><a href="#top"><img src="/img/arrow-up.png" title="Back to Top"></a></div>
                        <br>
                        <div class="footerbacktotop2" style="float: left">
                            <a href="http://evekb.org/forum/viewtopic.php?f=1033&t=18159">EVE+</a> theme by <a href="http://gate.eveonline.com/profile/vecati">Vecati</a>
                            <br>
                            Modified for Thessia by Karbowiak
                        </div>
                    </div>
                </section>
            </section>
        </div>
    </div>
</body>
</html>